{
  "_id": "_design/category",
  "views": {
    "all": {
      "map": "function(doc) {
        if (doc.entityType == 'category') emit(null, doc);
      }"
    },
    "children": {
      "map": "function(doc) {
        if (doc.entityType == 'category' && doc.parent) emit(doc.parent, null);
      }"
    }
  },
  "language": "javascript"
}
