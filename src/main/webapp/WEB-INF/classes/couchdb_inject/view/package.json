{
  "_id": "_design/package",
  "views": {
    "all": {
      "map": "function(doc) {
        if (doc.docType == 'package') emit(null, doc);
      }"
    },
    "toproduct": {
      "map": "function(doc){
        if (doc.docType == 'package'){
          emit(doc.productId, null);
        }
      }"
    }
  },
  "language": "javascript"
}
